<div class="suporte-container">
  <h1>Fale Conosco</h1>
  
  <div class="form-container">
    <form action="/suporte/enviar" method="POST" class="suporte-form">
      <div class="form-group">
        <label for="sala">Número da sala</label>
        <input type="text" id="sala" name="sala" class="form-control" placeholder="Type here..." required>
      </div>
      
      <div class="form-group">
        <label for="horario">Horário de uso</label>
        <input type="text" id="horario" name="horario" class="form-control" placeholder="Type here..." required>
      </div>
      
      <div class="form-group">
        <label for="descricao">Descrição do problema</label>
        <textarea id="descricao" name="descricao" class="form-control" rows="5" placeholder="Type here..." required></textarea>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Enviar</button>
      </div>
    </form>
  </div>
</div>

