<div class="informacoes-agendamento-container">
  <h1>Informações de agendamento</h1>
  
  <div class="form-container">
    <form action="/agendar" method="POST" class="agendamento-form">
      <input type="hidden" name="horario" value="<%= horario || '13:00' %>">
      <input type="hidden" name="sala" value="<%= sala || 'R03' %>">
      
      <div class="form-group">
        <label for="nome">Nome Completo</label>
        <input type="text" id="nome" name="nome" class="form-control" placeholder="Type here..." required>
      </div>
      
      <div class="form-group">
        <label for="turma">Turma</label>
        <input type="text" id="turma" name="turma" class="form-control" placeholder="Type here..." required>
      </div>
      
      <div class="form-group">
        <label for="grupo">Grupo</label>
        <input type="text" id="grupo" name="grupo" class="form-control" placeholder="Type here..." required>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Agendar</button>
      </div>
    </form>
  </div>
</div>

